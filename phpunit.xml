<?xml version="1.0"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.0/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache">

    <!-- Test Suites -->
    <testsuites>
        <testsuite name="unit">
            <directory>tests\Unit</directory>
        </testsuite>
        <testsuite name="integration">
            <directory>tests\Integration</directory>
        </testsuite>
    </testsuites>

    <!-- Code Coverage Configuration -->
    <coverage>
        <report>
            <html outputDirectory="coverage"/>
            <!-- Optionally specify other formats -->
            <!-- <clover outputFile="coverage/clover.xml"/> -->
            <!-- <text outputFile="coverage/coverage.txt"/> -->
        </report>
        <include>
            <!-- Include directories or files for coverage -->
            <directory>app</directory>
        </include>
        <exclude>
            <!-- Exclude directories or files from coverage -->
            <directory>vendor</directory>
        </exclude>
    </coverage>

    <!-- Test Settings -->
    <php>
        <env name="ENVIRONMENT" value="testing"/>
    </php>

    <!-- Logging -->
    <logging>
        <junit outputFile="reports/junit"/>
        <testdoxText outputFile="reports/testdox.txt"/>
         <testdoxHtml outputFile="reports/stestdox.html"/>
    </logging>
</phpunit>
